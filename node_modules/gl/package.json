    "node-gyp": "^7.1.0",
    "prebuild-install": "^5.3.5"
  },
  "devDependencies": {
    "angle-normals": "^1.0.0",
    "bunny": "^1.0.1",
    "faucet": "0.0.1",
    "gl-conformance": "^2.0.9",
    "prebuild": "^10.0.1",
    "snazzy": "^8.0.0",
    "standard": "^14.3.4",
    "tape": "^5.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/stackgl/headless-gl.git"
  },
  "keywords": [
    "webgl",
    "opengl",
    "gl",
    "headless",
